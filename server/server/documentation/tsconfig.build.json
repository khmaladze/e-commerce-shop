{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./openapi-dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["./open-api-documentation/types"]
  },
  "include": ["./open-api-documentation/**/*"],
  "exclude": ["node_modules", "openapi-dist", "dist"]
}
